{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",          // ðŸ‘ˆ base directory for non-relative imports
    "paths": {
      "#*": ["*"]    // ðŸ‘ˆ alias definition
    },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
